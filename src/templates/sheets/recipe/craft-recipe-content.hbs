<div class="components-header item">
    <span class="name">{{localize "ANVIL_AND_ARCANA.Recipe.ComponentsHeader"}}</span>
</div>

<div id="components-list" class="craft-items-section">
    <ol style="min-height: 35px" class="inventory-list craft-items-list">
        {{#unless components.length}}
            <p class="items-placeholder">{{localize "ANVIL_AND_ARCANA.Recipe.ComponentsPlaceholder"}}</p>
        {{/unless}}

        {{#if components.length}}
            {{> modules/anvil-and-arcana-wfrp4/templates/_shared/items-list.hbs items=components}}
        {{/if}}
    </ol>
</div>